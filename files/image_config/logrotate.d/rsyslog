/var/log/syslog
/var/log/quagga/*.log
/var/log/teamd.log
{
    rotate 7
    daily
    maxsize 100M
    missingok
    notifempty
    compress
    delaycompress
    postrotate
        # Calling kill directly instead of 'service rsyslog rotate >/dev/null' due
        # to bug in init-system-helpers. Bug has apparently been fixed in v1.47.
        # However, Debian Jessie is still using v1.22.
        # See https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=672218
        kill -HUP $(cat /var/run/rsyslogd.pid)
    endscript
}
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
{
    rotate 4
    daily
    maxsize 50M
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    postrotate
        # Calling kill directly instead of 'service rsyslog rotate >/dev/null' due
        # to bug in init-system-helpers. Bug has apparently been fixed in v1.47.
        # However, Debian Jessie is still using v1.22.
        # See https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=672218
        kill -HUP $(cat /var/run/rsyslogd.pid)
    endscript
}

